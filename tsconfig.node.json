{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM.Iterable"]
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "tests/**/*.test.ts",
    "src/**/*.ts",
    "*.config.mjs",
    "*.config.js",
    "*.config.ts"
  ]
}
