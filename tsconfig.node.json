{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "tests",
    "src/**/*.ts",
    "*.config.mjs",
    "*.config.js",
    "*.config.ts"
  ]
}
